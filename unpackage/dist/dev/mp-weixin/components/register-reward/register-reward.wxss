.reward-wrap {
  width: 80vw;
  height: auto;
  position: relative;
}
.reward-wrap > uni-image,
.reward-wrap .bg-img {
  width: 100%;
  will-change: transform;
}
.reward-wrap .wrap {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.reward-wrap .wrap > view {
  position: relative;
}
.reward-wrap .reward-content {
  margin: 0 50rpx 0 50rpx;
}
.reward-wrap .reward-item .head {
  color: #fff;
  text-align: center;
  line-height: 1;
  margin: 20rpx 0;
}
.reward-wrap .reward-item .content {
  display: flex;
  padding: 16rpx 26rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.reward-wrap .reward-item .content .info {
  flex: 1;
}
.reward-wrap .reward-item .content .tip {
  color: #ff222d;
  padding: 10rpx 0 10rpx 30rpx;
  width: 70rpx;
  line-height: 1.5;
  letter-spacing: 2rpx;
  border-left: 1px dashed #e5e5e5;
}
.reward-wrap .reward-item .content .num {
  font-size: 52rpx;
  color: #ff222d;
  font-weight: bolder;
  line-height: 1;
}
.reward-wrap .reward-item .content .type {
  font-size: 28rpx;
  margin-left: 10rpx;
  line-height: 1;
}
.reward-wrap .reward-item .content .desc {
  margin-top: 8rpx;
  color: #909399;
  font-size: 24rpx;
  line-height: 1;
}
.reward-wrap .btn {
  position: absolute;
  width: calc(100% - 100rpx);
  bottom: 40rpx;
  left: 50rpx;
}
.reward-wrap .btn .btn-img {
  width: 100%;
}

