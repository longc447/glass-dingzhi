.message {
  padding: 13rpx 20rpx;
  box-sizing: border-box;
  width: 100vw;
  position: relative;
}
.message .goods-item {
  width: 100%;
  background: #ffffff;
  position: relative;
  border-radius: 20rpx;
  margin: 0 auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.message .goods-item .goods-box {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}
.message .goods-item .goods-box image {
  width: 180rpx;
  height: 180rpx;
  min-width: 180rpx;
  border-radius: 10rpx;
}
.message .goods-item .goods-box .goods-info {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.message .goods-item .goods-box .goods-info .goods-name {
  width: 100%;
  line-height: 1.4;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.message .goods-item .goods-box .goods-info .goods-sku {
  color: #606266;
}
.message .goods-item .goods-box .goods-info .goods-sku ._span {
  padding-left: 20rpx;
}
.message .goods-item .goods-box .goods-info .goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.message .goods-item .goods-box .goods-info .goods-bottom text {
  line-height: 1;
}
.message .goods-item .goods-box .goods-info .goods-bottom .goods-price {
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
  font-weight: 500;
}
.message .goods-item .goods-box .goods-info .goods-bottom .goods-price .goods-price-sign {
  font-size: 20rpx;
}
.message .goods-item .goods-box .goods-info .goods-bottom .goods-option {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #ffffff;
}
.message .goods-item .footer-box {
  border-top: 2rpx solid;
  border-color: #eeeeee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding-top: 15rpx;
  box-sizing: border-box;
}
.message .goods-item .footer-box .goods-no {
  color: #606266;
  font-size: 26rpx;
}
.message .goods-item .footer-box .goods-btn {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #ffffff;
}
.message .goods-item .disabled {
  background: #e5e5e5;
}

