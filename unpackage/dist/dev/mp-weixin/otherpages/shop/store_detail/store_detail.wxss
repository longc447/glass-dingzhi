.store_detail {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.shop-info {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  background: #ffffff;
}
.shop-image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.shop-image image {
  width: 100%;
  height: 100%;
}
.shop-con {
  width: calc(80% - 90rpx - 20rpx);
  color: #ffffff;
}
.store-desc {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.store-desc .desc-title {
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  font-weight: 700;
  line-height: 1;
}
.store-explain {
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #eeeeee;
}
.store-explain .explain-li {
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}
.store-base-info {
  background: #ffffff;
  padding: 20rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  border-top: 1rpx solid #eeeeee;
}
.store-base-info .base-title {
  width: 100%;
  height: 70rpx;
  font-size: 32rpx;
  color: #909399;
  padding: 10rpx 20rpx 0 0;
  box-sizing: border-box;
}
.store-base-info .base-li {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 28rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.store-base-info .base-li .iconfont {
  font-size: 32rpx;
  color: #909399;
}
.store-base-info .base-li text {
  line-height: 1.1;
}
.store-base-info .base-li text:nth-child(2) {
  display: inline-block;
  font-size: 24rpx;
  max-width: 65%;
}
map {
  width: 100%;
}

