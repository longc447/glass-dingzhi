.follow-and-share {
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
}
.follow-and-share text {
  color: #fff;
}
.store {
  width: 100%;
  height: 100%;
  padding: 1px 0;
}
.store-exper {
  padding: 20rpx;
  box-sizing: border-box;
  margin: 0 30rpx;
}
.store-exper {
  display: flex;
  background: #ffffff;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eeeeee;
  margin: 0 30rpx;
  padding-bottom: 0;
}
.store-exper .exper-info {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.store-exper .exper-info .exper-star {
  display: flex;
  align-items: center;
}
.store-exper .exper-info .exper-star .star-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.store-exper .exper-info .exper-desc {
  font-size: 24rpx;
  line-height: 1.8;
}
.store-exper .exper-more {
  width: 10%;
  height: 100%;
  text-align: right;
}
.store-exper .exper-more .iconfont {
  color: #eeeeee;
  font-size: 40rpx;
}
.store-desc {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ffffff;
  margin: 20rpx 30rpx 0;
  border-radius: 10rpx 10rpx 0 0;
}
.store-desc .desc-title {
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  font-weight: 700;
}
.store-eval {
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 0 30rpx 20rpx;
  border-radius: 0 0 10rpx 10rpx;
  padding-top: 0;
}
.store-eval .eval-li {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.store-eval .eval-li .line {
  width: 300rpx;
  height: 12rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.store-eval .eval-li .grade {
  font-weight: bold;
}
.store-explain {
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 0 30rpx 20rpx;
  border-top: 1rpx solid #eeeeee;
  border-radius: 0 0 10rpx 10rpx;
}
.store-explain .explain-li {
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}
.store-base-info {
  background: #ffffff;
  padding: 20rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  border-top: 1rpx solid #eeeeee;
  position: relative;
  margin: 0 30rpx 20rpx;
  border-radius: 0 0 10rpx 10rpx;
}
.store-base-info .base-title {
  width: 100%;
  height: 70rpx;
  font-size: 32rpx;
  color: #eeeeee;
  padding: 10rpx 20rpx 0 0;
  box-sizing: border-box;
}
.store-base-info .base-li {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 28rpx;
  padding: 10rpx 0 20rpx 0;
  box-sizing: border-box;
}
.store-base-info .base-li .iconfont {
  font-size: 32rpx;
  color: #eeeeee;
}
.store-base-info .base-li text {
  line-height: 1.1;
}
.store-base-info .base-li text:nth-child(2) {
  display: inline-block;
  font-size: 24rpx;
  max-width: 65%;
}
.store-map-dark {
  width: 100%;
  height: 410rpx;
  background: rgba(0, 0, 0, 0);
  position: absolute;
  left: 0;
  top: 0;
}
map {
  width: 100%;
}
.share-popup .share-title,
.uni-popup__wrapper-box .share-title {
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 15rpx 0;
  text-align: center;
}
.share-popup .share-content,
.uni-popup__wrapper-box .share-content {
  display: flex;
  display: -webkit-flex;
  -o-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 15rpx;
}
.share-popup .share-content .share-box,
.uni-popup__wrapper-box .share-content .share-box {
  flex: 1;
  text-align: center;
}
.share-popup .share-content .share-box .share-btn,
.uni-popup__wrapper-box .share-content .share-box .share-btn {
  margin: 0;
  padding: 0;
  border: none;
  line-height: 1;
  height: auto;
}
.share-popup .share-content .share-box .share-btn text,
.uni-popup__wrapper-box .share-content .share-box .share-btn text {
  margin-top: 20rpx;
  font-size: 24rpx;
  display: block;
  color: #303133;
}
.share-popup .share-content .share-box .iconfont,
.uni-popup__wrapper-box .share-content .share-box .iconfont {
  font-size: 80rpx;
  line-height: initial;
}
.share-popup .share-content .share-box .iconpengyouquan,
.share-popup .share-content .share-box .iconiconfenxianggeihaoyou,
.uni-popup__wrapper-box .share-content .share-box .iconpengyouquan,
.uni-popup__wrapper-box .share-content .share-box .iconiconfenxianggeihaoyou {
  color: #07c160;
}
.share-popup .share-footer,
.uni-popup__wrapper-box .share-footer {
  height: 90rpx;
  line-height: 90rpx;
  border-top: 2rpx #f5f5f5 solid;
  text-align: center;
  color: #666;
}
.poster-layer .generate-poster {
  padding: 40rpx 0;
}
.poster-layer .generate-poster .iconfont {
  font-size: 80rpx;
  color: #07c160;
  line-height: initial;
}
.poster-layer .generate-poster > view {
  text-align: center;
}
.poster-layer .generate-poster > view:last-child {
  margin-top: 20rpx;
}
.poster-layer .image-wrap {
  width: 70%;
  margin: 30px auto 20px auto;
  box-shadow: 0 0 16px rgba(100, 100, 100, 0.3);
}
.poster-layer .image-wrap image {
  width: 100%;
  height: 100%;
  height: 750rpx;
}
.poster-layer .msg {
  padding: 40rpx;
}
.poster-layer .save {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.poster-layer .close {
  position: absolute;
  top: 0;
  right: 20rpx;
  width: 40rpx;
  height: 80rpx;
  font-size: 50rpx;
}

