.video {
  background-color: #000000;
  height: 100vh;
}
.video .close {
  padding-top: 60rpx;
  color: #fff;
}
.video .close .iconclose {
  margin-left: 30rpx;
  font-size: 50rpx;
}
.video_view {
  height: 100vw;
  width: 100vw;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.video_view video {
  width: 100%;
  height: 100%;
}

