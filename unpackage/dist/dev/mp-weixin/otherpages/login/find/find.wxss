page {
  background: #ffffff !important;
  overflow: hidden;
}
.captcha {
  width: 170rpx;
  height: 50rpx;
}
.find-form {
  padding: 100rpx 80rpx 0;
}
.find-form .form-input {
  margin-top: 60rpx;
  height: 60rpx;
  border-bottom: 2rpx solid #eeeeee;
}
.find-form .form-input input {
  padding: 0;
  font-size: 28rpx;
}
.find-form .find-btn {
  margin: 374rpx 0 0;
  border-radius: 40rpx;
  color: #fff;
}
.find-form .find-btn[disabled] {
  background-color: #f7f7f7 !important;
}
.forget-section {
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  margin-top: 10rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.align-type {
  display: flex;
  justify-content: space-between;
}
.header-wrap {
  width: 80%;
  height: 100%;
  margin: calc(120rpx + 44px) auto 0;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: bottom;
  position: relative;
}
.header-wrap .title {
  font-size: 50rpx;
  font-weight: bold;
}
.iconclose {
  font-size: 52rpx;
  position: fixed;
  left: 24rpx;
  top: 72rpx;
  z-index: 9;
  color: #000;
}
.placeholder-class {
  color: #bfbfbf;
}

