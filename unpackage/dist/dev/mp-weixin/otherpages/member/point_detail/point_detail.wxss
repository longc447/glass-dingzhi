 .fixed {
  position: relative;
  top: 0;
}
.tab {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  background-color: #f8f8f8;
}
.tab view {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
}
.tab view text {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.cart-empty {
  margin-top: 104px !important;
}
.account-box {
  width: 100%;
  box-sizing: border-box;
  position: relative;
}
.account-box > image {
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 1;
}
.account-box .accout-btn {
  display: flex;
  margin-top: 30rpx;
}
.account-box .accout-btn view {
  width: 170rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 44rpx;
}
.account-box .account-text {
  position: relative;
  padding: 50rpx 30rpx 34rpx 30rpx;
  display: flex;
  align-items: center;
  z-index: 9;
}
.account-box .account-text .headimg {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border: 2px solid #fff;
  border-radius: 50%;
  overflow: hidden;
}
.account-box .account-text .headimg image {
  width: 100%;
  height: 100%;
}
.account-box .account-text .point {
  margin-left: 30rpx;
  color: #fff;
  font-size: 36rpx;
}
.account-box .account-text .iconjifen1 {
  color: #fff;
  margin-left: 8rpx;
}
.detailed-wrap {
  background: #fff;
  position: relative;
  z-index: 9;
  padding-top: 80rpx;
}
.detailed-wrap .head {
  display: flex;
  height: 90rpx;
}
.detailed-wrap .head > view {
  flex: 1;
  text-align: left;
  padding: 0 20rpx;
  line-height: 90rpx;
}
.detailed-wrap .cont {
  background: #fff;
  width: 100%;
  margin: 0 auto;
}
.detailed-wrap .cont .detailed-item {
  padding: 30rpx 0 32rpx;
  margin: 0 32rpx;
  border-bottom: 1px solid #eeeeee;
  position: relative;
  box-sizing: border-box;
}
.detailed-wrap .cont .detailed-item:last-of-type {
  border-bottom: none;
}
.detailed-wrap .cont .detailed-item .info {
  padding-right: 180rpx;
}
.detailed-wrap .cont .detailed-item .info .event {
  font-size: 28rpx;
  line-height: 1.3;
  font-weight: 500;
}
.detailed-wrap .cont .detailed-item .info .time-box {
  line-height: 1;
  margin-top: 24rpx;
}
.detailed-wrap .cont .detailed-item .info .time {
  font-size: 20rpx;
  color: #909399;
}
.detailed-wrap .cont .detailed-item .num {
  width: 160rpx;
  position: absolute;
  right: 17rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  text-align: right;
  font-size: 32rpx;
  font-weight: 500;
}

