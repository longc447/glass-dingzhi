page {
  padding: 20rpx 30rpx 0;
}
.balance-wrap {
  border-radius: 10rpx;
  width: 100%;
  padding: 52rpx 30rpx 40rpx;
  box-sizing: border-box;
}
.balance-wrap .balance-top .balance-tips {
  display: flex;
  align-items: center;
}
.balance-wrap .balance-top .balance-tips text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 1;
  margin-right: 10rpx;
}
.balance-wrap .balance-top .balance-tips image {
  width: 30rpx;
  height: 19rpx;
}
.balance-wrap .balance-top .balance-tips .iconyincang {
  vertical-align: middle;
  font-size: 40rpx;
}
.balance-wrap .balance-top .all-alance {
  font-size: 50rpx;
  line-height: 1;
  color: #ffffff;
  margin-top: 33rpx;
}
.balance-wrap .balance-top .withdraw-btn {
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 100rpx 0 0 100rpx;
  padding: 2rpx 40rpx;
  position: absolute;
  right: 0;
  background: #ff4544;
  color: #fff !important;
}
.balance-wrap .balance-top .all-alance {
  line-height: 1;
  font-size: 50rpx;
  font-weight: 500;
}
.balance-wrap .balance-bottom {
  flex: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 104rpx;
}
.balance-wrap .balance-bottom .balance-bottom-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.balance-wrap .balance-bottom .balance-bottom-item .balance-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  font-weight: 500;
  color: #909399;
}
.balance-wrap .balance-bottom .balance-bottom-item .balance {
  line-height: 1;
  font-size: 32rpx;
  color: #ffffff;
}
.balance_other {
  display: flex;
  margin-top: 76rpx;
  align-items: center;
}
.balance_other .balance_allow view:first-child,
.balance_other .balance_unallow view:first-child {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1;
}
.balance_other .balance_allow view:last-child,
.balance_other .balance_unallow view:last-child {
  color: #ffffff;
  line-height: 1;
  margin-top: 20rpx;
}
.balance_other .balance-split {
  width: 1rpx;
  height: 47rpx;
  background-color: #ffffff;
  margin-left: 96rpx;
  margin-right: 64rpx;
}
.action_recode {
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 0 30rpx;
}
.action_recode > view {
  padding: 22rpx 0;
  display: flex;
  align-items: center;
  position: relative;
}
.action_recode > view:first-child {
  border-bottom: 1px solid #eeeeee;
}
.action_recode > view image {
  width: 55rpx;
  height: 55rpx;
  margin-right: 14rpx;
}
.action_recode > view text {
  color: #303133;
}
.action_recode > view text.iconfont {
  position: absolute;
  font-size: 28rpx;
  color: #909399;
  right: 0;
}
.action {
  position: fixed;
  bottom: 44rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  width: calc(100% - 60rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
  padding-bottom: 30rpx;
}
.action .recharge {
  color: #ffffff;
  width: 80%;
  border-radius: 50rpx;
  text-align: center;
  padding: 20rpx 0;
}
.action > view {
  margin-top: 30rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 500rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  color: #fff;
}
.action .withdraw {
  border: 1px solid;
}
.balance-other-info {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 750rpx;
  margin-top: 50rpx;
}
.balance-other-info .balance-detail {
  line-height: 1;
  padding: 0 20rpx;
  font-size: 24rpx;
}
.balance-other-info .recharge-record {
  line-height: 1;
  padding: 0 20rpx;
  font-size: 24rpx;
}
.balance-xian {
  width: 2rpx;
  height: 20rpx;
  background-color: #383838;
}
.balance-title {
  color: rgba(255, 255, 255, 0.7);
}

