.list-item {
  margin: 0 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 18rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.list-item:first-child {
  margin-top: 18rpx;
}
.list-item .item-mr {
  font-size: 20rpx;
  color: #fff;
  height: 150rpx;
  width: 150rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  position: absolute;
  right: -90rpx;
  top: -90rpx;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.list-item .item-top {
  border-bottom: 1px solid #eeeeee;
  padding-bottom: 26rpx;
  display: flex;
  flex-direction: column;
}
.list-item .item-top view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.list-item .item-top view .top-title {
  font-size: 28rpx;
  font-weight: 500;
}
.list-item .item-top view .top-num {
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 10rpx;
}
.list-item .item-top text {
  color: #606266;
  font-size: 24rpx;
}
.list-item .item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 26rpx;
}
.list-item .item-bottom text {
  font-size: 24rpx;
  color: #606266;
}
