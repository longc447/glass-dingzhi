.fx_adv {
  width: 100%;
  display: block;
}
.fenxiao-menu {
  margin: 24rpx;
  height: 124rpx;
  display: flex;
  background-color: #ffffff;
  align-items: center;
}
.fenxiao-menu .menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 36rpx;
}
.fenxiao-menu .menu-item .menu-item-tit {
  font-size: 24rpx;
  color: #000000;
}
.fenxiao-menu .menu-item text {
  color: #838383;
  font-size: 20rpx;
}
.fenxiao-menu .shu {
  width: 1rpx;
  height: 92rpx;
  border: 1rpx solid #eaeaea;
}
.goods {
  box-sizing: border-box;
  margin-top: 22rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.goods .goods-list {
  width: 342rpx;
  height: 466rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin: 24rpx 0 24rpx 24rpx;
}
.goods .goods-list .goods-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods .goods-list .goods-item .goods-image {
  width: 301rpx;
  height: 301rpx;
  border-radius: 5rpx;
  margin-top: 19rpx;
}
.goods .goods-list .goods-item .goods-image image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
  box-sizing: border-box;
}
.goods .goods-list .goods-item .goods-desc-wrap {
  padding: 22rpx;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-name {
  width: 100%;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-name .name {
  line-height: 1.3;
  font-weight: 600;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #000000;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 23rpx 29rpx 0 0;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom .goods-price {
  font-size: 28rpx;
  color: #000000;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom .good-share-money {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom .level_money {
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom .level_money .money_sign {
  line-height: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left;
  font-size: 28rpx;
}
.goods .goods-list .goods-item .goods-desc-wrap .goods-desc .goods-bottom .level_money .money {
  float: left;
  height: 100%;
  line-height: 38rpx;
  font-size: 28rpx;
}

