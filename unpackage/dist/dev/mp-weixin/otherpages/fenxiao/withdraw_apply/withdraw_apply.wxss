.container {
  width: 100vw;
  height: 100vh;
  background: #f8f8f8;
}
.align-right {
  text-align: right;
}
.withdraw-wrap {
  margin: 20rpx 30rpx 0;
  padding: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.withdraw-wrap .title {
  font-size: 28rpx;
  color: #909399;
}
.withdraw-wrap .money-wrap {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
}
.withdraw-wrap .money-wrap .unit {
  font-size: 60rpx;
  line-height: 1;
}
.withdraw-wrap .money-wrap .withdraw-money {
  height: 60rpx;
  line-height: 1;
  min-height: 60rpx;
  padding-left: 20rpx;
  font-size: 60rpx;
  flex: 1;
  font-weight: 500;
  vertical-align: middle;
}
.withdraw-wrap .bootom {
  display: flex;
  padding-top: 30rpx;
  font-size: 28rpx;
  line-height: 1;
  flex: 1;
}
.btn {
  margin: 0 30rpx;
  margin-top: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  color: #fff;
  text-align: center;
}
.btn.disabled {
  background: #ccc;
  border-color: #ccc;
  color: #fff;
}
.desc {
  margin: 20rpx 40rpx;
  font-size: 24rpx;
  color: #909399;
}
.withdraw-list {
  border: 2rpx solid #cccccc;
  text-align: center;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

